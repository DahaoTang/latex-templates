\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{beamercolorthemeusyd}[University of Sydney Beamer Color Theme]

%==============================================================================
%                               MODE: PRESENTATION
%==============================================================================
\mode<presentation>

%==============================================================================
%                             COLOR PALETTE
%==============================================================================
\definecolor{usydred}   {RGB}{236,  95,  50}
\definecolor{usydblack} {RGB}{ 20,  20,  20}
\definecolor{usydwhite} {RGB}{255, 255, 255}
\definecolor{usydgrey}  {RGB}{241, 241, 241}

%==============================================================================
%                             GLOBAL ELEMENTS
%==============================================================================
\setbeamercolor{normal text}  {fg=usydblack, bg=usydwhite}
\setbeamercolor{alerted text} {fg=usydred}
\setbeamercolor{example text} {fg=usydblack}
\setbeamercolor{structure}    {fg=usydred}

%==============================================================================
%                             TITLES & FRAMES
%==============================================================================
\setbeamercolor{title}        {fg=usydwhite, bg=usydred}
\setbeamercolor{subtitle}     {fg=usydblack}
\setbeamercolor{author}       {fg=usydblack}
\setbeamercolor{date}         {fg=usydblack}

\setbeamercolor{frametitle}   {fg=usydred, bg=usydwhite}

%==============================================================================
%                                 BLOCKS
%==============================================================================
\setbeamercolor{block title}  {fg=usydwhite, bg=usydred}
\setbeamercolor{block body}   {fg=usydblack, bg=usydgrey}

\setbeamercolor{block title alerted}{fg=usydwhite, bg=usydred}
\setbeamercolor{block body alerted} {fg=usydblack, bg=usydgrey}

\setbeamercolor{block title example}{fg=usydwhite, bg=usydblack}
\setbeamercolor{block body example} {fg=usydblack, bg=usydgrey}

%==============================================================================
%                         NAVIGATION & SEPARATORS
%==============================================================================
% [UPDATED] Set footline to Red Background / White Text
\setbeamercolor{headline}{fg=usydwhite, bg=usydred}
\setbeamercolor{footline}{fg=usydwhite, bg=usydred}

\setbeamercolor{upper separation line head}{bg=usydred}
\setbeamercolor{lower separation line head}{bg=usydred}
\setbeamercolor{upper separation line foot}{bg=usydred}
\setbeamercolor{lower separation line foot}{bg=usydred}

%==============================================================================
%                     SPECIFIC HEADLINE / FOOTLINE ELEMENTS
%==============================================================================
\setbeamercolor{title in headline}     {fg=usydwhite, bg=usydred}
\setbeamercolor{author in headline}    {fg=usydwhite, bg=usydred}
\setbeamercolor{institute in headline} {fg=usydwhite, bg=usydred}

\setbeamercolor{logo in head/foot}     {fg=usydwhite, bg=usydred}
\setbeamercolor{section in head/foot}  {fg=usydwhite, bg=usydred}

% [UPDATED] Ensure text inside footer components is White on Red
\setbeamercolor{author in head/foot}   {fg=usydwhite, bg=usydred} 
\setbeamercolor{title in head/foot}    {fg=usydwhite, bg=usydred}
\setbeamercolor{institute in footline} {fg=usydblack, bg=usydwhite}

%==============================================================================
%                               MODE: ALL
%==============================================================================
\mode<all>